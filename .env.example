# Application
APP_ENV=local # The current application environment (e.g., dev, stage, prod).
NODE_ENV=development # The current service environment (e.g., development, staging, production).
API_PORT=3011

# Logging
LOG_LEVEL='debug' # Sets the minimum log level (VERBOSE, DEBUG, LOG, WARN, ERROR, FATAL)
LOG_MASK_FIELDS='accessToken,jwt,password,secret,phone' # Comma-separated list of fields to mask in logs
LOG_FILTER_EVENTS='/api/service/health,/api/service/config,/api/service/up' # Comma-separated list of events to fully exclude from logging e.g. '/api/service/health'
LOG_MAX_ARRAY_LENGTH=1 # Maximum number of array items to include in logs before truncating

# SWAGGER_TOKEN=6189fe54e9b4 # (optional) Token to protect the Swagger API documentation UI.

# Security & JWT Authentication
BASIC_AUTH_TOKEN=8ddba558-22f5-467c-9d98-6189fe54e9b4 # (Optional) A unique secret key for signing JWTs. Should be a long, random string in production.
JWT_EXPIRATION=3600 # The expiration time for JWTs, in seconds (e.g., 3600 = 1 hour).
JWT_SECRET=dalfkko42fo2fok24fo2f4k0fsfd

# Database (PostgreSQL)
POSTGRES_DATA_DIR=.tmp/postgres_data # (optional) Path to the directory where the PostgreSQL data docker volume is mounted.
POSTGRES_HOST=localhost
POSTGRES_PORT=5438
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pgdb
POSTGRES_USE_SSL=false
# POSTGRES_CA_PATH=/path/to/ca-certificate.crt  # Required if POSTGRES_USE_SSL=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6383
# REDIS_PASSWORD=                                # Optional, Redis password
# REDIS_DB=0                                     # Optional, Redis database number (0-15)
REDIS_CACHE_TTL=5000                             # Cache time window in ms (default: 30000 = 30s)
REDIS_QUEUES_MAX_RETRIES=3                       # Max retry attempts for failed jobs (1-10)
REDIS_QUEUES_RETRY_DELAY_MS=5000                 # Initial delay between retries in ms (100-60000, uses exponential backoff)
REDIS_QUEUES_CONCURRENCY=10                      # Process N jobs concurrently (1-100)
REDIS_QUEUES_RATE_LIMIT_MAX=100                  # Max jobs per duration (1-1000)
REDIS_QUEUES_RATE_LIMIT_DURATION=1000            # Rate limit duration in ms (100-60000)

# HTTP Client Configuration
HTTP_REQ_TIMEOUT=10000 # The timeout for outgoing HTTP requests, in milliseconds.
HTTP_REQ_MAX_REDIRECTS=5 # The maximum number of redirects to follow for an HTTP request.

CORS_ORIGIN='*' # wildcard for dev

# Email Config
EMAIL_API_KEY=testestsetst # Your API key for the service.
EMAIL_SENDER='App Dev <dev@resend.dev.com>' # The "From" address for outgoing emails.
EMAIL_ADMIN=admin@dev.com

# Websocket Config
WS_PATH=/ws
WS_TRANSPORTS='websocket'

TZ=UTC

# OAuth2 (optional)
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id # Your Google OAuth client ID.
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret # Your Google OAuth client secret.
GITHUB_OAUTH_CLIENT_ID=your_github_client_id # Your GitHub OAuth client ID.
GITHUB_OAUTH_CLIENT_SECRET=your_github_client_secret # Your GitHub OAuth client secret.
LINKEDIN_OAUTH_CLIENT_ID=your_linkedin_client_id # Your LinkedIn OAuth client ID.
LINKEDIN_OAUTH_CLIENT_SECRET=your_linkedin_client_secret # Your LinkedIn OAuth client secret

# AI (optional)
AI_GEMINI_API_KEY=your_gemini_api_key
AI_GROQ_API_KEY=your_groq_api_key
AI_OPENROUTER_API_KEY=your_openrouter_api_key
